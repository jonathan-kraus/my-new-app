generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  sessions  Session[]
  accounts  Account[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  provider          String
  providerAccountId String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}




model Log {
  id           String   @id @default(cuid())
  level        String
  message      String
  data         Json?
  createdAt    DateTime @default(now())
  userId       String?
  sessionEmail String?
  sessionUser  String?
  page         String?
  userAgent    String?
  ipAddress    String?

  @@map("logs")
}
enum LogLevel {
  debug
  info
  warn
  error
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String?
  userEmail String?  // ‚Üê Email only (no foreign key)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
