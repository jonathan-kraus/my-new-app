generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  createdAt DateTime  @default(now())
  image     String?
  name      String?
  accounts  Account[]
  sessions  Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String @id @default(cuid())
  userId            String
  provider          String
  providerAccountId String
  user              User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Log {
  id           String   @id @default(cuid())
  level        String
  message      String
  data         Json?
  createdAt    DateTime @default(now())
  userId       String?
  sessionEmail String?
  sessionUser  String?
  page         String?
  userAgent    String?
  ipAddress    String?

  @@map("logs")
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userEmail String?
}

enum LogLevel {
  debug
  info
  warn
  error
}
