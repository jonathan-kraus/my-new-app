{
  "extends": ["config:base"],
  "prCreation": "not-pending",
  "rebaseWhen": "behind-base-branch",
  "ignoreTests": false,

  "packageRules": [
    {
      "matchManagers": ["npm", "pnpm"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "automergeType": "pr",
      "automergeStrategy": "merge-commit"
    },
    {
      "matchManagers": ["pnpm"],
      "automergeType": "branch"
    },
    {
      "matchPackagePatterns": ["next", "neon"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["prisma", "@prisma/client"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["prisma", "@prisma/client"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
