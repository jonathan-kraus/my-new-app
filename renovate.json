{
  "extends": ["config:recommended"],
  "prCreation": "not-pending",
  "rebaseWhen": "behind-base-branch",
  "ignoreTests": false,
  "packageRules": [
    {
      "matchManagers": ["npm", "pnpm"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "automergeType": "pr",
      "automergeStrategy": "merge-commit"
    },
    {
      "matchManagers": ["pnpm"],
      "automergeType": "branch"
    },
    {
      "automerge": true,
      "schedule": ["* 01-23 * * 0"],
      "matchPackageNames": ["/next/", "/neon/"]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["*"]
    },
    {
      "matchUpdateTypes": ["major"],
      "enabled": false,
      "matchPackageNames": ["/prisma/", "/@prisma/client/"]
    }
  ]
}
